---
import { Image } from "astro:assets";
import myPhoto from "../assets/stas-photo.jpg";
import Wrapper from "../components/Wrapper.astro";
import stasAge from "../scripts/calcStasAge";
---

<section
  id="about-me"
  class="relative text-white bg-violet-950 pt-10 pb-20 transition-all duration-700 animate-scroll on-scroll:bg-red-500 overflow-clip"
>
  <Wrapper size="large" class="flex items-center flex-col sm:flex-row z-10">
    <div class="lg:flex-5 text-gray-100 sm:mr-5">
      <h2
        class="text-6xl mt-5 text-nowrap text-center animate-scroll blur-sm -on-scroll:blur-sm transition-all duration-500 -translate-x-20 -on-scroll:-translate-x-20 opacity-0 -on-scroll:opacity-0"
      >
        About Me
      </h2>
      <p
        class="text-xl lg:text-justify mb-5 text-center animate-scroll blur-sm -on-scroll:blur-sm transition-all duration-1000 -translate-x-20 -on-scroll:-translate-x-20 opacity-0 -on-scroll:opacity-0"
      >
        I'm an {stasAge}-year-old student at the Mechanical and Electronic
        Technical School in Szczecin. Programming is <span class="font-bold"
          >my passion.</span
        > I'm constantly learning new technologies by <span class="font-bold"
          >coding projects</span
        >. If you're looking for someone who approaches each project with
        dedication and is <span class="font-bold">passionate</span>
        about programming feel free to reach out!
      </p>
    </div>
    <Image
      src={myPhoto}
      class="max-h-96 object-contain mb-5 sm:mb-0 animate-scroll blur-sm -on-scroll:blur-sm transition-all duration-1000 translate-x-20 -on-scroll:translate-x-20 opacity-0 -on-scroll:opacity-0"
      alt="StanisÅ‚aw Dymny sitting in black jacketket"
    />
  </Wrapper>
  <div class="absolute bg-white h-10 w-6/12 top-0 -left-10 -skew-x-45"></div>
  <div
    class="absolute bottom-0 left-1/2 -translate-x-1/2 w-7/12 h-0 border-b-[28px] border-b-stone-200 border-l-[40px] border-l-transparent border-r-[40px] border-r-transparent"
  >
  </div>
</section>
